{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Clean & Compile Debug",
        "type": "shell",
        "command": "cmake --build --preset nvidia-debug --clean-first",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": "build"
      },
      {
        "label": "Compile Debug",
        "type": "shell",
        "command": "cmake --build ${workspaceFolder}/build -j $(nproc)",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }